<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

        <ImageView
                android:id="@+id/repository_item_avatar"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerVertical="true"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_toRightOf="@id/repository_item_avatar">

            <TextView
                    android:id="@+id/repository_item_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="full_name"
                    android:textStyle="bold"
            />

            <TextView
                    android:id="@+id/repository_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="description"
                    android:layout_below="@id/repository_item_full_name"
            />

            <TextView
                    android:id="@+id/repository_item_html_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="html_url"
                    android:layout_below="@id/repository_item_description"
            />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>